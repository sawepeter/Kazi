<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingBottom="10dp"
            android:background="@drawable/profile_background"/>

        <RelativeLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wallet_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:background="@drawable/details_background"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/txt_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/wallet_balance"
                android:fontFamily="@font/dmsansboldregular"
                android:text="User Profile"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            app:cardCornerRadius="3dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="23dp"
            app:cardElevation="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="23dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:layout_marginTop="14dp"
                    android:textColor="#171818"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/dmsansboldregular"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:gravity="center_horizontal" />

                <RelativeLayout
                    android:id="@+id/layout_wallet"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/userName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="21dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="13dp"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:id="@+id/balance_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        android:textAllCaps="false"
                        android:text="Contact :"
                        android:layout_alignParentLeft="true"
                        tools:ignore="RtlHardcoded"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:id="@+id/img_hide"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toRightOf="@+id/balance_txt"
                        android:layout_marginStart="130dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="130dp"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/wallet_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/dmsansboldregular"
                        android:layout_marginEnd="8dp"
                        android:textColor="#000000"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="16dp"
                        android:textAllCaps="false"
                        android:text="0752632415"
                        android:layout_alignParentLeft="true"
                        tools:ignore="RtlHardcoded"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp" />

                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="165dp"
            android:backgroundTint="#ffffff"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18sp"
                android:textSize="12sp"
                android:textColor="#77869e"
                android:text="GENERAL"
                android:textAllCaps="true"
                android:layout_marginLeft="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:orientation="vertical"
                app:cardCornerRadius="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="23dp"
                app:cardElevation="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="23dp"
                tools:ignore="RtlHardcoded">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pro_settings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_location" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/pro_settings"
                        android:layout_marginStart="10dp"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/pro_settings">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="0dp"
                            android:textColor="#141414"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="@font/dmsansboldregular"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:text="User Location"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/profile_image"
                            android:textColor="#939393"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="@font/dmsansboldregular"
                            android:textSize="11sp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:text="Nyeri Kenya"
                            android:gravity="center_horizontal" />



                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/profile_settings"
                android:orientation="vertical"
                app:cardCornerRadius="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="23dp"
                app:cardElevation="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="23dp"
                tools:ignore="RtlHardcoded">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_privacy"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_alarm"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img_privacy"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/img_privacy">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="0dp"
                            android:textColor="#141414"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="@font/dmsansboldregular"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:text="Privacy"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#939393"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="@font/dmsansboldregular"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"
                            android:text="Change your password"
                            android:gravity="center_horizontal" />



                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>